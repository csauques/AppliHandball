<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="800.0" maxWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Open">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#ouvrirMatch" text="Nouveau Match" />
                  <MenuItem mnemonicParsing="false" onAction="#ovrirStats" text="Statistiques" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#ouvrirAide" text="ouvrir l'aide" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Option">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
